doctype html
include partials/_variables.pug  
html(lang=lang)
    include partials/_header.pug  
    body
        include partials/_modal-login.pug
        header.o-header
            include partials/_navMain.pug
        .container
            .row
                .col-12.col-md-3
                    .navProducts__toggle Menu kategorií

                    .navProducts--absolute
                        include partials/_navProducts.pug

                .col-12.col-md-9    
                    include partials/_breadcrumb.pug
        main
            .container
                .o-cartEmpty
                    img.o-cartEmpty__img(src=URLbase+"img/cart-empty.svg" alt="Váš košík je prázdný" title="Váš košík je prázdný")
                    h1.o-cartEmpty__title Váš košík je prázdný
                    p.o-cartEmpty__text Pro pokračování v nákupu prosím nejprve vložte vybraný produkt do košíku.
                    a.btn.o-cartEmpty__link(href="#") Začít nakupovat #[span.a-btnIcon #[span.a-icon.-cheveron.-white]]



        include partials/_footer.pug

        include partials/_js-include.pug