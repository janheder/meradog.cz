                    .container.o-filter__content
                        .row.o-filter__row

                            - for (var i=0; i<5; i++)
                                .o-filter__item
                                    .o-filter__formGroup.m-formGroup.-checkbox.-noMargin
                                        input.m-formGroup__input(type="checkbox" name="filter-brand-1" id="filter-brand-1" required)
